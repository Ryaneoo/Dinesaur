@*Main Page For Dinesaur Customers*@


@page "/User/Home"
@using Dinesaur.Domain
@using Microsoft.EntityFrameworkCore
@inject NavigationManager NavigationManager
@implements IDisposable
@inject AuthenticationStateProvider Auth
@inject IDbContextFactory<Dinesaur.Data.DinesaurContext> DbFactory
@inject Dinesaur.Data.DinesaurContext DbContext

    <div style="
         width: 100%;
         color: white;
         padding: 50px;
         align-items: center;">
        <div style="display: flex; gap: 100px; height: 400px; align-items: center; justify-content: left">
            <div style>
                <h1 style="text-align: left"> Welcome,</h1>
                <h1 style="text-align: left"> @displayName!</h1>
            </div>
            
            <form method="get">
                <input type="text"
                       name="searchTerm"
                       placeholder="Search Restaurants"
                       style="height: 50px; width: 300px;"
                        />
                <button type="submit"
                        style="padding: 12px 18px; font-size: 16px;">
                    Search
                </button>
            </form>
        </div>
        <div>
            <h3>Favourite Restaurants</h3>
            <div style="display: flex; gap: 25px; justify-content: left">
                @if (restaurants.Count == 0)
                {
                    <p><em>Loading...</em></p>
                }
                else
                {
                    var random = new Random();
                    var randomRestaurants = restaurants
                    .OrderBy(r => random.Next())
                    .Take(5)
                    .ToList();
                    @foreach( var restaurant in randomRestaurants)
                    {
                        <a href="/Restaurants/@restaurant.RestaurantID">
                            <div style="z-index: 1000; position: relative; cursor: pointer;">
                                <div style="width: 250px; height: 250px; background-color: black; border-radius: 15px; pointer-events: none;">
                                @if (restaurant.Logo != null && restaurant.Logo.Count > 0)
                                {
                                    <img src="@restaurant.Logo[0]"
                                         alt="@restaurant.RestaurantName logo"
                                         style="width:100%;height:100%;object-fit:cover;border-radius:15px;display:block;" />
                                }
                                else
                                {
                                    <div style="color:white;padding:10px;">No logo</div>
                                }

                                </div>
                                <h4>@restaurant.RestaurantName</h4>
                                <p>@restaurant.Location</p>
                                </div>
                        </a>

                    }
                }
            </div>
        </div>
        <div>
            <h3>Nearby Restaurants</h3>
            <div style="display: flex; gap: 25px;justify-content: left">
                @if (restaurants.Count == 0)
                {
                    <p><em>Loading...</em></p>
                }
                else
                {
                    var random = new Random();
                    var randomRestaurants = restaurants
                    .OrderBy(r => random.Next())
                    .Take(5)
                    .ToList();
                    @foreach (var restaurant in randomRestaurants)
                    {
                        <a href="/Restaurants/@restaurant.RestaurantID">
                            <div>
                                <div style=" width: 250px; height: 250px; background-color: black;border-radius: 15px">
                                @if (restaurant.Logo != null && restaurant.Logo.Count > 0)
                                {
                                    <img src="@restaurant.Logo[0]"
                                         alt="@restaurant.RestaurantName logo"
                                         style="width:100%;height:100%;object-fit:cover;border-radius:15px;display:block;" />
                                }
                                else
                                {
                                    <div style="color:white;padding:10px;">No logo</div>
                                }

                                </div>
                                <h4> @restaurant.RestaurantName</h4>
                                <p> @restaurant.Location</p>

                            </div>
                        </a>

                    }
                }
            </div>
        </div>
        <div>
            <h3>Rated Restaurants</h3>
            <div style="display: flex; gap: 25px;justify-content: left">
                @if (restaurants.Count == 0)
                {
                    <p><em>Loading...</em></p>
                }
                else
                {
                    var random = new Random();
                    var randomRestaurants = restaurants
                    .OrderBy(r => random.Next())
                    .Take(5)
                    .ToList();
                    @foreach (var restaurant in randomRestaurants)
                    {
                        <a href="/Restaurants/@restaurant.RestaurantID">
                            <div>
                                <div style=" width: 250px; height: 250px; background-color: black;border-radius: 15px">
                                @if (restaurant.Logo != null && restaurant.Logo.Count > 0)
                                {
                                    <img src="@restaurant.Logo[0]"
                                         alt="@restaurant.RestaurantName logo"
                                         style="width:100%;height:100%;object-fit:cover;border-radius:15px;display:block;" />
                                }
                                else
                                {
                                    <div style="color:white;padding:10px;">No logo</div>
                                }

                                </div>
                                <h4> @restaurant.RestaurantName</h4>
                                <p> @restaurant.Location</p>

                            </div>
                        </a>
                    }
                }
            </div>
        </div>
    </div>



@code {
    private string? displayName;
    private List<Restaurant> restaurants = new();
    public void Dispose()
    {
        throw new NotImplementedException();
    }

    protected override async Task OnInitializedAsync()
    {
        var user = (await Auth.GetAuthenticationStateAsync()).User;
        if (!user.Identity?.IsAuthenticated ?? true) return;

        var aspNetUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        await using var db = await DbFactory.CreateDbContextAsync();
        var identityUser = await db.Users
            .Where(u => u.Id == aspNetUserId)
            .Select(u => u.Name)
            .SingleOrDefaultAsync();

        displayName = identityUser ?? user.Identity?.Name;
        restaurants = await DbContext.Restaurant
        .Where(r => r.Status == Restaurant.ApprovalStatus.Approved).ToListAsync();
    }
    
    void displayRestaurant(Restaurant restaurant)
    {

        Console.WriteLine("CLICK REGISTERED");
        NavigationManager.NavigateTo($"/Restaurants/{restaurant.RestaurantID}");
    }

}
