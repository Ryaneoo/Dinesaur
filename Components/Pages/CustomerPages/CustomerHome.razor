@*Main Page For Dinesaur Customers*@


@page "/User/Home"
@using Dinesaur.Domain
@using Microsoft.EntityFrameworkCore
@inject NavigationManager NavigationManager

@inject AuthenticationStateProvider Auth
@inject IDbContextFactory<Dinesaur.Data.DinesaurContext> DbFactory
@inject Dinesaur.Data.DinesaurContext DbContext
@rendermode InteractiveServer
    <div style="
         width: 100%;
         color: white;
         padding: 50px;
         align-items: center;">
        <div style="display: flex; gap: 100px; height: 400px; align-items: center; justify-content: left">
            <div style>
                <h1 style="text-align: left"> Welcome,</h1>
                <h1 style="text-align: left"> @displayName!</h1>
            </div>
            <div>
            <form @onsubmit="Search">
                <input type="text"
                       @bind-value="searchTerm"
                       placeholder="Search Restaurants"
                       id="searchinput"
                       style="height: 50px; width: 200px;"
                        />
                <button type="submit"
                        
                        >
                    Search
                    </button>
            </form>
            </div>
            <div>
                <button type="button"
                style="padding: 12px 18px; font-size: 16px;"
                        @onclick="OpenFilter">
                        Filters
                </button>
            </div>
             @if (restaurants.Count != 0)
                {
             var searchedRestaurant = searchrestaurants
            .ToList();
            var filteredRestaurant = filteredrestaurants
            .ToList();
            if(searchedRestaurant.Any() || filteredRestaurant.Any())
        {       
                num = Math.Max(
                searchedRestaurant?.Count ?? 0,
                filteredRestaurant?.Count ?? 0
                );
                <h3>@num match found</h3>
        }
            else
            {
                <h3>No match found</h3>
            }
        }
        </div>
       
        
        <div>
           
        @*<div style="display: grid; grid-template-columns: repeat(5,1fr) ;"> *@
                @if (restaurants.Count == 0)
                {
                    <p><em>Loading...</em></p>
                }
                else
                {
                    var random = new Random();
                    var randomRestaurants = restaurants
                    .OrderBy(r => random.Next())
                    .ToList();
                 var searchedRestaurants = searchrestaurants
                .ToList();
                var filteredRestaurants = filteredrestaurants
                .ToList();
            if (searchedRestaurants.Any() && !filteredRestaurants.Any())
                {
                    <h3>Searched Restaurants by Search Bar</h3>
                    
                <div style="display: flex; gap: 25px; justify-content: left">
                 @foreach (var restaurant in searchedRestaurants)
                     {
                        <a href="/Restaurants/@restaurant.RestaurantID">
                            <div style="z-index: 1000; position: relative; cursor: pointer;">
                                <div style="width: 250px; height: 250px; background-color: black; border-radius: 15px; pointer-events: none;">
                                    @if (restaurant.Logo != null && restaurant.Logo.Count > 0)
                                    {
                                        <img src="@restaurant.Logo[0]"
                                             alt="@restaurant.RestaurantName logo"
                                             style="width:100%;height:100%;object-fit:cover;border-radius:15px;display:block;" />
                                    }
                                    else
                                    {
                                        <div style="color:white;padding:10px;">No logo</div>
                                    }

                                </div>
                                <h4>@restaurant.RestaurantName</h4>
                                <p>@restaurant.Location</p>
                            </div>
                        </a>
                }
                </div>
                }
            if (filteredRestaurants.Any() && !searchedRestaurants.Any())
                {
                <h3>Searched Restaurants by Filter</h3>

                <div style="display: flex; gap: 25px; justify-content: left">
                    @foreach (var restaurant in filteredRestaurants)
                    {
                        <a href="/Restaurants/@restaurant.RestaurantID">
                            <div style="z-index: 1000; position: relative; cursor: pointer;">
                                <div style="width: 250px; height: 250px; background-color: black; border-radius: 15px; pointer-events: none;">
                                    @if (restaurant.Logo != null && restaurant.Logo.Count > 0)
                                    {
                                        <img src="@restaurant.Logo[0]"
                                             alt="@restaurant.RestaurantName logo"
                                             style="width:100%;height:100%;object-fit:cover;border-radius:15px;display:block;" />
                                    }
                                    else
                                    {
                                        <div style="color:white;padding:10px;">No logo</div>
                                    }

                                </div>
                                <h4>@restaurant.RestaurantName</h4>
                                <p>@restaurant.Location</p>
                            </div>
                        </a>
                    }
                </div>
            }
            if (!filteredRestaurants.Any() && !searchedRestaurants.Any())
            { 
                    <h3>Restaurants Avaliable</h3>
                <div style="display: flex; gap: 25px; justify-content: left">
                @foreach( var restaurant in randomRestaurants)
                    {
                        
                    
                        <a href="/Restaurants/@restaurant.RestaurantID">
                            <div style="z-index: 1000; position: relative; cursor: pointer;">
                                <div style="width: 250px; height: 250px; background-color: black; border-radius: 15px; pointer-events: none;">
                                @if (restaurant.Logo != null && restaurant.Logo.Count > 0)
                                {
                                    <img src="@restaurant.Logo[0]"
                                         alt="@restaurant.RestaurantName logo"
                                         style="width:100%;height:100%;object-fit:cover;border-radius:15px;display:block;" />
                                }
                                else
                                {
                                    <div style="color:white;padding:10px;">No logo</div>
                                }

                                </div>
                                <h4>@restaurant.RestaurantName</h4>
                                <p>@restaurant.Location</p>
                                </div>
                        </a>
                    
                    } 
                    </div>
                }
                }
                
            
        </div>
    </div>
    @if(showFilter == true)
        {
    <!-- Backdrop -->
    <div class="modal-backdrop fade show"></div>

    <!-- Modal -->
    <div class="modal fade show d-block" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title" style="color:black;">Search Restaurant by Category</h4>
                    <button type="button" class="btn-close" @onclick="CloseFilter"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Restaurant Category</label>
                        <select class="form-select" @bind="Category">
                            @foreach (var c in Categories)
                            {
                                <option value="@c">@c</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="ApplyFilters">Apply</button>
                </div>
             </div>
        </div>
    </div>
    }

@code {
    private string? displayName;
    private string? searchinput,searchTerm;
    private int? num;
    private List<Restaurant> restaurants = new();
    private List<Restaurant>? searchrestaurants = new();
    private List<Restaurant>? filteredrestaurants = new();
    private string? Category,filterCategory;
    private bool hasSearched,showFilter;

    protected override async Task OnInitializedAsync()
    {
        var user = (await Auth.GetAuthenticationStateAsync()).User;
        if (!user.Identity?.IsAuthenticated ?? true) return;

        var aspNetUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        await using var db = await DbFactory.CreateDbContextAsync();
        var identityUser = await db.Users
            .Where(u => u.Id == aspNetUserId)
            .Select(u => u.Name)
            .SingleOrDefaultAsync();

        displayName = identityUser ?? user.Identity?.Name;
        restaurants = await DbContext.Restaurant
        .Where(r => r.Status == Restaurant.ApprovalStatus.Approved).ToListAsync();
    }
    private List<String> Categories = new List<String>
    {
         "",
         "Western",
         "Fine Dining",
         "Dessert",
         "Vegetarian",
         "HotPot",
         "Others",
    };
    void displayRestaurant(Restaurant restaurant)
    {

        Console.WriteLine("CLICK REGISTERED");
        NavigationManager.NavigateTo($"/Restaurants/{restaurant.RestaurantID}");
    }
    private async Task Search()
    {
        searchinput = searchTerm;
        searchrestaurants.Clear();
        filteredrestaurants.Clear();
        foreach(var stall in restaurants)
        {
            if (stall.RestaurantName.Contains(searchinput, StringComparison.OrdinalIgnoreCase) || stall.RestaurantName == (searchinput))
            {
                searchrestaurants.Add(stall);
            } 
        }
        hasSearched = true;
        StateHasChanged();
    }
    private async Task OpenFilter()
    {
        showFilter = true;
    }
    private void CloseFilter() => showFilter = false;
    private async Task ApplyFilters()
    {
        filterCategory = Category;
        filteredrestaurants.Clear();
        searchrestaurants.Clear();
        foreach (var stall in restaurants)
        {
            if(stall.Category == Category)
            {
                filteredrestaurants.Add(stall);
            }
        }
        showFilter = false;
        StateHasChanged();
    }
}