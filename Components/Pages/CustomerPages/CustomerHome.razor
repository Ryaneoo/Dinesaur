            @code {
                private string? displayName;
            private string? searchinput,searchTerm;
            private int? num;
            private List<Restaurant> restaurants = new();
    private List<Restaurant>? searchrestaurants = new();
    private bool hasSearched;
    public void Dispose()
    {
        throw new NotImplementedException();
    }

    protected override async Task OnInitializedAsync()
    {
        var user = (await Auth.GetAuthenticationStateAsync()).User;
        if (!user.Identity?.IsAuthenticated ?? true) return;

        var aspNetUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        await using var db = await DbFactory.CreateDbContextAsync();
        var identityUser = await db.Users
            .Where(u => u.Id == aspNetUserId)
            .Select(u => u.Name)
            .SingleOrDefaultAsync();

        displayName = identityUser ?? user.Identity?.Name;
        restaurants = await DbContext.Restaurant
        .Where(r => r.Status == Restaurant.ApprovalStatus.Approved).ToListAsync();
    }

    void displayRestaurant(Restaurant restaurant)
    {

        Console.WriteLine("CLICK REGISTERED");
        NavigationManager.NavigateTo($"/Restaurants/{restaurant.RestaurantID}");
    }
    private async Task Search()
    {
        searchinput = searchTerm;
        searchrestaurants.Clear();
        foreach(var stall in restaurants)
        {
            if (stall.RestaurantName.Contains(searchinput, StringComparison.OrdinalIgnoreCase) || stall.RestaurantName == (searchinput))
            {
                searchrestaurants.Add(stall);
            } 
        }
        hasSearched = true;
        StateHasChanged();
    }

