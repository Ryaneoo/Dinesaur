@page "/foods/delete/{id:int}"
@using Microsoft.EntityFrameworkCore
@using Dinesaur.Domain
@inject IDbContextFactory<Dinesaur.Data.DinesaurContext> DbFactory
@inject NavigationManager NavigationManager
@inject Dinesaur.Data.DinesaurContext DbContext
<PageTitle>Delete</PageTitle>
<container style="text-align:center; color:lightgreen; align-content: center;">
<h1 style="margin-top:40px;">Delete</h1>
@* Get details on the current food item *@
<h2>Are you sure you want to delete this?</h2>
<div>
    <hr / style="color:white;">
    @if (food is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <div style="margin-left:25px;">
        <dl class="row">
            <dt class="col-sm-2" style="font-size:30px;">Name</dt>
                <dd class="col-sm-10" style="font-size:30px;">@food.FoodName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2"style="font-size:30px;">Cost</dt>
                <dd class="col-sm-10" style="font-size:30px;">$@food.Cost</dd>
        </dl>
        <dl class="row">
                <dt class="col-sm-2" style="font-size:30px;">Description</dt>
                <dd class="col-sm-10" style="font-size:30px;">@food.Description</dd>
        </dl>
            <dl class="row">
                <dt class="col-sm-2" style="font-size:30px;">Food Category</dt>
                <dd class="col-sm-10" style="font-size:30px;">@food.Category</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2" style="font-size:30px;">Food Image</dt>
                <div style="width: 60%;  display: flex;  align-items: center;color: none; margin-left:300px;">
                    <img src="@food.Image.FirstOrDefault()" style="width: 60%; height: auto; align-content: center; border: 5px solid white; border-radius: 5px;" alt="Uploaded Image" />
                </div>
            </dl>
        <EditForm method="post" Model="food" OnValidSubmit="DeleteFood" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(food is null)">Delete</button> |
            <a href="/menus">Back to Menu</a>
        </EditForm>
        </div>
    }
</div>
</container>
@code {
    [Parameter]
    public int id { get; set; } Food? food;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();


    }
    protected override void OnInitialized() //get food id
    {
        food = DbContext.Food.FirstOrDefault(x => x.FoodID == id);
    }
    private async Task DeleteFood() //remove food item from database
    {
        using var context = DbFactory.CreateDbContext();
        context.Food.Remove(food!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/menus");
    }
}
