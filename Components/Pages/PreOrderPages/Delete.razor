@page "/preorders/delete"
@using Microsoft.EntityFrameworkCore
@using Dinesaur.Domain
@inject IDbContextFactory<Dinesaur.Data.DinesaurContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PreOrder</h2>
    <hr />
    @if (preorder is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Cost</dt>
            <dd class="col-sm-10">@preorder.Cost</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">MenuID</dt>
            <dd class="col-sm-10">@preorder.MenuID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">RestaurantID</dt>
            <dd class="col-sm-10">@preorder.RestaurantID</dd>
        </dl>
        <EditForm method="post" Model="preorder" OnValidSubmit="DeletePreOrder" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(preorder is null)">Delete</button> |
            <a href="/preorders">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PreOrder? preorder;

    [SupplyParameterFromQuery]
    private int PreOrderID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        preorder = await context.PreOrder.FirstOrDefaultAsync(m => m.PreOrderID == PreOrderID);

        if (preorder is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePreOrder()
    {
        using var context = DbFactory.CreateDbContext();
        context.PreOrder.Remove(preorder!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/preorders");
    }
}
