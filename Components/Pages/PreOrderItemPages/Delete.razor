@page "/preorderitems/delete"
@using Microsoft.EntityFrameworkCore
@using Dinesaur.Domain
@inject IDbContextFactory<Dinesaur.Data.DinesaurContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PreOrderItem</h2>
    <hr />
    @if (preorderitem is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Quantity</dt>
            <dd class="col-sm-10">@preorderitem.Quantity</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PreOrderID</dt>
            <dd class="col-sm-10">@preorderitem.PreOrderID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">FoodID</dt>
            <dd class="col-sm-10">@preorderitem.FoodID</dd>
        </dl>
        <EditForm method="post" Model="preorderitem" OnValidSubmit="DeletePreOrderItem" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(preorderitem is null)">Delete</button> |
            <a href="/preorderitems">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PreOrderItem? preorderitem;

    [SupplyParameterFromQuery]
    private int PreorderItemID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        preorderitem = await context.PreOrderItem.FirstOrDefaultAsync(m => m.PreorderItemID == PreorderItemID);

        if (preorderitem is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePreOrderItem()
    {
        using var context = DbFactory.CreateDbContext();
        context.PreOrderItem.Remove(preorderitem!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/preorderitems");
    }
}
