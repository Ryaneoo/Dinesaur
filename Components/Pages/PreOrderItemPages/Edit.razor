@page "/preorderitems/edit"
@using Microsoft.EntityFrameworkCore
@using Dinesaur.Domain
@inject IDbContextFactory<Dinesaur.Data.DinesaurContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>PreOrderItem</h2>
<hr />
@if (PreOrderItem is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="PreOrderItem" OnValidSubmit="UpdatePreOrderItem" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="PreOrderItem.PreorderItemID" value="@PreOrderItem.PreorderItemID" />
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity:</label>
                    <InputNumber id="quantity" @bind-Value="PreOrderItem.Quantity" class="form-control" />
                    <ValidationMessage For="() => PreOrderItem.Quantity" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="preorderid" class="form-label">PreOrderID:</label>
                    <InputNumber id="preorderid" @bind-Value="PreOrderItem.PreOrderID" class="form-control" />
                    <ValidationMessage For="() => PreOrderItem.PreOrderID" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="foodid" class="form-label">FoodID:</label>
                    <InputNumber id="foodid" @bind-Value="PreOrderItem.FoodID" class="form-control" />
                    <ValidationMessage For="() => PreOrderItem.FoodID" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/preorderitems">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int PreorderItemID { get; set; }

    [SupplyParameterFromForm]
    private PreOrderItem? PreOrderItem { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        PreOrderItem ??= await context.PreOrderItem.FirstOrDefaultAsync(m => m.PreorderItemID == PreorderItemID);

        if (PreOrderItem is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdatePreOrderItem()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(PreOrderItem!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!PreOrderItemExists(PreOrderItem!.PreorderItemID))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/preorderitems");
    }

    private bool PreOrderItemExists(int preorderitemid)
    {
        using var context = DbFactory.CreateDbContext();
        return context.PreOrderItem.Any(e => e.PreorderItemID == preorderitemid);
    }
}
