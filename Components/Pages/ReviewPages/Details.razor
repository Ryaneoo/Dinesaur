@page "/reviews/details"
@using Microsoft.EntityFrameworkCore
@using Dinesaur.Domain
@inject IDbContextFactory<Dinesaur.Data.DinesaurContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Review</h2>
    <hr />
    @if (review is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ReviewTitle</dt>
            <dd class="col-sm-10">@review.ReviewTitle</dd>
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@review.Location</dd>
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@review.Date</dd>
            <dt class="col-sm-2">Rating</dt>
            <dd class="col-sm-10">@review.Rating</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@review.Description</dd>
            <dt class="col-sm-2">RestaurantID</dt>
            <dd class="col-sm-10">@review.RestaurantID</dd>
            <dt class="col-sm-2">CustomerID</dt>
            <dd class="col-sm-10">@review.CustomerID</dd>
        </dl>
        <div>
            <a href="@($"/reviews/edit?reviewid={review.ReviewID}")">Edit</a> |
            <a href="@($"/reviews")">Back to List</a>
        </div>
    }
</div>

@code {
    private Review? review;

    [SupplyParameterFromQuery]
    private int ReviewID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        review = await context.Review.FirstOrDefaultAsync(m => m.ReviewID == ReviewID);

        if (review is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
