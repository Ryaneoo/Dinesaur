@using Microsoft.AspNetCore.Identity
@using Dinesaur.Data

@inject SignInManager<DinesaurUser> SignInManager

<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <NavLink class="w-100 btn btn-lg btn-primary" href="Account/Manage" Match="NavLinkMatch.All">Profile</NavLink>
        
    </li>
    <br/>
    <li class="nav-item">
        <NavLink class="w-100 btn btn-lg btn-primary" href="Account/Manage/Email">Email</NavLink>
    </li>
    <br />
    <li class="nav-item">
        <NavLink class="w-100 btn btn-lg btn-primary" href="Account/Manage/ChangePassword">Password</NavLink>
    </li>
    <br />
    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <NavLink class="w-100 btn btn-lg btn-primary" href="Account/Manage/ExternalLogins">External logins</NavLink>
        </li>
    }
    <li class="nav-item">
        <NavLink class="w-100 btn btn-lg btn-primary" href="Account/Manage/TwoFactorAuthentication">Two-factor authentication</NavLink>
    </li>
    <br />
    <li class="nav-item">
        <NavLink class="w-100 btn btn-lg btn-primary" href="Account/Manage/PersonalData">Personal data</NavLink>
    </li>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
